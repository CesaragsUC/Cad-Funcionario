@model IEnumerable<CadFuncionario.Models.Departamento>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DEPARTAMENTO_NOME)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DEPARTAMENTO_SALA)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ANDAR)
        </th>
        <th>
           Funcionarios
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DEPARTAMENTO_NOME)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DEPARTAMENTO_SALA)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ANDAR)
        </td>
        <td>
           @foreach (var total in item.Funcionarios)
           {
             <b>-</b> @Html.DisplayFor(modelItem => total.FUNCIONARIO_NOME)<br>
           }
        </td>


        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.DepartamentoID }) |
            @Html.ActionLink("Details", "Details", new { id=item.DepartamentoID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.DepartamentoID })
        </td>
    </tr>
}

</table>
